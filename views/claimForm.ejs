<h2>Submit Claim â€“ Policy <%= policy.policy_id %></h2>
<div class="row">
  <div class="col-md-6">
    <% if (errors && errors.length) { %>
      <div class="alert alert-danger">
        <ul class="mb-0">
          <% errors.forEach(e => { %><li><%= e.msg %></li><% }) %>
        </ul>
      </div>
    <% } %>
    <form action="/claims" method="post">
      <input type="hidden" name="policy_id" value="<%= policy.policy_id %>">
      <div class="mb-3">
        <label class="form-label">Incident Date</label>
        <input type="date" name="claim_date" class="form-control" value="<%= old.claim_date || '' %>" required>
      </div>
      <div class="mb-3">
        <label class="form-label">Estimated Amount</label>
        <input type="number" step="0.01" name="claim_amount" class="form-control" value="<%= old.claim_amount || '' %>" required>
      </div>
      <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea name="description" class="form-control"><%= old.description || '' %></textarea>
      </div>
      <button class="btn btn-primary" type="submit">Submit Claim</button>
    </form>
  </div>
</div>
