<div class="d-flex justify-content-between align-items-center mb-3">
  <h2 class="m-0">Pending Claims</h2>
</div>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Claim ID</th>
        <th>Policy ID</th>
        <th>Claimant</th>
        <th>Date</th>
        <th>Amount</th>
        <th>Description</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% if (claims && claims.length) { %>
        <% claims.forEach(c => { %>
          <tr>
            <td><%= c.claim_id %></td>
            <td><a href="/policies/<%= c.policy_id %>"><%= c.policy_id %></a></td>
            <td><%= c.full_name %> (<%= c.email %>)</td>
            <td><%= c.claim_date %></td>
            <td>$<%= Number(c.claim_amount).toFixed(2) %></td>
            <td><%= c.description %></td>
            <td>
              <form action="/admin/claims/<%= c.claim_id %>" method="POST" style="display:inline-block">
                <input type="hidden" name="action" value="approve" />
                <button class="btn btn-sm btn-success">Approve</button>
              </form>
              <form action="/admin/claims/<%= c.claim_id %>" method="POST" style="display:inline-block">
                <input type="hidden" name="action" value="reject" />
                <button class="btn btn-sm btn-danger">Reject</button>
              </form>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr><td colspan="7" class="text-muted">No pending claims.</td></tr>
      <% } %>
    </tbody>
  </table>
</div>
