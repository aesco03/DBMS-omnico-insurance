<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title mb-3">Forgot Password</h5>
        <% if (errors && errors.length) { %>
          <div class="alert alert-danger">
            <ul class="mb-0">
              <% errors.forEach(e => { %><li><%= e.msg %></li><% }) %>
            </ul>
          </div>
        <% } %>
        <% if (typeof success !== 'undefined' && success) { %>
          <div class="alert alert-success"><%= success %></div>
        <% } %>
        <form action="/auth/forgot" method="post">
          <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" name="email" class="form-control" value="<%= old.email || '' %>" required>
            <div class="form-text">Enter your email to receive reset instructions.</div>
          </div>
          <button class="btn btn-primary w-100" type="submit">Send reset</button>
        </form>
      </div>
    </div>
  </div>
</div>
