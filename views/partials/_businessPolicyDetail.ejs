<div class="card">
  <div class="card-header">
    <h6 class="mb-0">Business Policy Details</h6>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-6">
        <dl class="row mb-0">
          <dt class="col-sm-5">Business Name:</dt>
          <dd class="col-sm-7"><strong><%= details.business_name || 'N/A' %></strong></dd>
          
          <dt class="col-sm-5">Business Type:</dt>
          <dd class="col-sm-7"><strong><%= details.business_type || 'N/A' %></strong></dd>
          
          <dt class="col-sm-5">Industry:</dt>
          <dd class="col-sm-7"><strong><%= details.industry || 'N/A' %></strong></dd>
          
          <dt class="col-sm-5">Annual Revenue:</dt>
          <dd class="col-sm-7"><strong class="text-info">$<%= Number(details.annual_revenue || 0).toFixed(2) %></strong></dd>
          
          <dt class="col-sm-5">Employees:</dt>
          <dd class="col-sm-7"><strong><%= details.number_of_employees || 'N/A' %></strong></dd>
        </dl>
      </div>
      <div class="col-md-6">
        <dl class="row mb-0">
          <dt class="col-sm-5">Business Address:</dt>
          <dd class="col-sm-7"><strong><%= details.business_address || 'N/A' %></strong></dd>
          
          <dt class="col-sm-5">Contact Number:</dt>
          <dd class="col-sm-7"><code><%= details.contact_number || 'N/A' %></code></dd>
          
          <dt class="col-sm-5">Contact Email:</dt>
          <dd class="col-sm-7"><code><%= details.contact_email || 'N/A' %></code></dd>
          
          <dt class="col-sm-5">Coverage Type:</dt>
          <dd class="col-sm-7"><strong><%= details.coverage_type || 'N/A' %></strong></dd>
          
          <dt class="col-sm-5">Coverage Amount:</dt>
          <dd class="col-sm-7"><strong class="text-info">$<%= Number(details.coverage_amount || 0).toFixed(2) %></strong></dd>
          
          <dt class="col-sm-5">Deductible:</dt>
          <dd class="col-sm-7"><strong class="text-warning">$<%= Number(details.deductible || 0).toFixed(2) %></strong></dd>
          
          <dt class="col-sm-5">Premium:</dt>
          <dd class="col-sm-7"><strong class="text-success">$<%= Number(details.premium_amount || 0).toFixed(2) %></strong></dd>
        </dl>
      </div>
    </div>
  </div>
</div>

