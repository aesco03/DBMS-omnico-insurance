<h2>Make a Payment</h2>
<p class="text-muted">Select which policy you want to make a payment for.</p>
<div class="list-group">
  <% if (policies && policies.length) { %>
    <% policies.forEach(p => { %>
      <div class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <strong>Policy <%= p.policy_id %></strong> — <%= p.type_name %>
          <div class="text-muted">Status: <%= p.status_name %> • Start: <%= p.start_date %></div>
        </div>
        <div>
          <a href="/payments/<%= p.policy_id %>" class="btn btn-outline-primary btn-sm">Make Payment</a>
        </div>
      </div>
    <% }) %>
  <% } else { %>
    <div class="list-group-item text-muted">You have no policies to make a payment for.</div>
  <% } %>
</div>
